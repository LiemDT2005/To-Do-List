@model Item
@{
    ViewData["Title"] = "Add New Item";
}

<div class="container mt-4" style="max-width: 500px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white text-center">
            <h5 class="mb-0">Add New Item</h5>
        </div>

        <div class="card-body">

            <form action="Add" method="post">
                <div class="mb-3">
                    <label class="form-label fw-bold">Text</label>
                    <input class="form-control" name="Text" placeholder="Enter todo item..." required />
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a href="/" class="btn btn-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-primary px-4">Save</button>
                </div>
            </form>

        </div>
    </div>
</div>
